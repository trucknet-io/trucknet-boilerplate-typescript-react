{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./definitions"]
  },
  "include": ["definitions/**/*.d.ts", "src/**/*", "__tests__/**/*"]
}
