{
  "name": "trucknet-boilerplate-typescript-react",
  "version": "0.0.1",
  "description": "Boilerplate for react project on typescript",
  "engines": {
    "node": "~10.14.0",
    "npm": "~6.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trucknet-io/trucknet-boilerplate-typescript-node.git"
  },
  "keywords": [
    "trucknet",
    "typescript",
    "boilerplate",
    "react"
  ],
  "author": "goooseman",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "commit-prompt --no-verify",
    "precommit": "lint-staged && npm run lint",
    "lint": "npm run lint:tsc && npm run lint:tslint",
    "lint:tsc": "tsc -p tsconfig.json --noEmit",
    "lint:prettier": "prettier --write \"{src,test}/**/*.ts*\"",
    "lint:tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "env-cmd development webpack-dev-server --config webpack.config.js --hot",
    "build": "env-cmd production webpack --config webpack.config.js",
    "build:tsc": "tsc -p tsconfig.json",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --detectOpenHandles",
    "test:ci": "jest --detectOpenHandles --coverage",
    "clean": "rimraf '{src,__tests__}/**/*.js?(x)?(.map)'",
    "release": "./extra/deployment/release.sh"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.5.3",
    "env-cmd": "^8.0.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "rollbar-sourcemap-webpack-plugin": "^2.4.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.3.1",
    "webpack": "^4.29.3",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "devDependencies": {
    "@storybook/addon-info": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@types/jest": "^23.3.14",
    "@types/storybook__react": "^4.0.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.2",
    "prettier-config-trucknet-io": "^2.0.1",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-hot-loader": "^4.6.5",
    "react-testing-library": "^5.5.3",
    "rimraf": "^2.6.3",
    "trucknet-commit": "^1.4.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.12.1",
    "tslint-config-trucknet-io": "^1.4.0",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.9"
  }
}
