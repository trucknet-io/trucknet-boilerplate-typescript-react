{
  "name": "trucknet-boilerplate-typescript-react",
  "version": "1.0.0",
  "description": "Boilerplate for react project on typescript",
  "engines": {
    "node": "~10.14.0",
    "npm": "~6.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trucknet-io/trucknet-boilerplate-typescript-node.git"
  },
  "keywords": [
    "trucknet",
    "typescript",
    "boilerplate",
    "react"
  ],
  "author": "goooseman",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "commit-prompt",
    "precommit": "lint-staged && npm run lint",
    "lint": "npm run lint:tsc && npm run lint:tslint",
    "lint:tsc": "tsc -p tsconfig.json",
    "lint:prettier": "prettier --write \"{src,test}/**/*.ts*\"",
    "lint:tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "env-cmd development webpack-dev-server --config webpack.config.js",
    "build": "env-cmd production webpack --config webpack.config.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest --detectOpenHandles --testPathPattern \"src/.+spec.tsx?$\"",
    "test:e2e": "jest --detectOpenHandles --testPathPattern \"__tests__/.+.tsx?\"",
    "test:ci": "jest --detectOpenHandles --coverage"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@material-ui/core": "^3.2.2",
    "@material-ui/icons": "^3.0.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.3",
    "env-cmd": "^8.0.2",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rollbar-sourcemap-webpack-plugin": "^2.4.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "devDependencies": {
    "@storybook/react": "^4.0.0-rc.1",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.5",
    "@types/storybook__react": "^3.0.9",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "jest": "^23.6.0",
    "prettier-config-trucknet-io": "^1.1.0",
    "trucknet-commit": "^1.3.7",
    "ts-jest": "^23.10.4",
    "tslint": "^5.7.0",
    "tslint-config-trucknet-io": "^1.0.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
